<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane prefHeight="700.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="github.weichware10.analyse.gui.TrialSelectorController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Bitte filtern Sie die Versuchsliste, um Ergebnisse zu finden." HBox.hgrow="ALWAYS" />
                  <HBox alignment="CENTER_RIGHT" fillHeight="false" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <ComboBox fx:id="amountBox" editable="true" onAction="#checkAmountInput" onKeyPressed="#checkAmountInput" prefWidth="150.0" promptText="Anzahl" />
                        <Button mnemonicParsing="false" text="Suchen" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="configIdField" promptText="Konfigurations-ID" />
                  <ComboBox fx:id="toolTypeBox" prefWidth="150.0" promptText="Tool-Typ" />
                  <DatePicker fx:id="startPicker" promptText="Start-Datum" />
                  <DatePicker fx:id="endPicker" promptText="End-Datum" />
               </children>
            </HBox>
            <TableView fx:id="resultTable" focusTraversable="false" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn editable="false" prefWidth="75.0" text="Versuchs-ID" />
                <TableColumn prefWidth="75.0" text="Konfigurations-ID" />
                  <TableColumn prefWidth="75.0" text="Zeit" />
                  <TableColumn prefWidth="75.0" text="Antwort" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
