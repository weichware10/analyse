<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="github.weichware10.analyse.gui.LoginController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="benutzernameId" promptText="Benutzername" />
            <PasswordField fx:id="passwortId" promptText="Passwort" />
            <TextField fx:id="schemaId" promptText="Schema" text="public" />
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="loginButtonId" mnemonicParsing="false" onAction="#loginToDatabase" text="Login" />
                <Button fx:id="beendenButtonId" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#closeProgramm" text="Beenden" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
